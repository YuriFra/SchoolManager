@page
@model SchoolManager.Pages.Lessons.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lessons</h1>

<p>
    <a asp-page="Create">Add a lesson</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Lessons[0].Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lessons[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lessons[0].Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lessons[0].Teacher)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Lessons) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.Name)
        </td>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
